<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_couleur_partie"
    tools:context=".SauvegardeDonnees">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.904">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_contour"
            android:fontFamily="@font/library"

            android:gravity="center"
            android:text="@string/topTen"
            android:textColor="@color/ninetyseven"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/back_contour"
            android:fontFamily="@font/library"
            android:gravity="center"
            android:text="@string/meilleuresJoueurs"
            android:textColor="@color/ninety"
            android:textSize="30dp" />

        <ListView
            android:id="@+id/listJoueurs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"/>



        <Button
            android:id="@+id/retourMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/menu" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>